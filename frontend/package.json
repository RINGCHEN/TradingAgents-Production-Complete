{
  "name": "tradingagents-frontend",
  "version": "2.0.0",
  "description": "TradingAgents AI Investment Analysis System - Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "test": "react-scripts test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:security": "jest --testPathPattern=\"security\"",
    "test:components": "jest --testPathPattern=\"components\"",
    "test:services": "jest --testPathPattern=\"services\"",
    "test:utils": "jest --testPathPattern=\"utils\"",
    "test:auth": "jest --config jest.auth.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "node tests/e2e/run-e2e-tests.js",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:all": "npm run test:auth && npm run test:integration && npm run test:e2e",
    "test:validate": "node scripts/validate-test-config.cjs",
    "test:debug": "jest --runInBand --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "build-emergency": "vite build --mode production",
    "build:prod": "set NODE_ENV=production && react-scripts build",
    "build:alpha": "set NODE_ENV=alpha && vite build --mode alpha",
    "alpha:launch": "node scripts/launch-alpha-test.js",
    "alpha:monitor-users": "node scripts/monitor-alpha-users.js",
    "alpha:check-health": "node scripts/check-alpha-health.js",
    "alpha:generate-report": "node scripts/generate-alpha-report.js",
    "alpha:backup-data": "node scripts/backup-alpha-data.js",
    "beta:deploy": "npm run build && firebase deploy --only hosting:tradingagents-main",
    "beta:monitor": "npm run alpha:check-health && npm run alpha:generate-report",
    "start": "react-scripts start",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.11.0",
    "chart.js": "^4.2.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^2.29.3",
    "lucide-react": "^0.542.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "react-window": "^1.8.8",
    "styled-jsx": "^5.1.7",
    "tradingagents-frontend": "file:",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-window": "^1.8.5",
    "@types/styled-jsx": "^2.2.9",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^5.1.15",
    "eslint": "^8.34.0",
    "firebase-tools": "^14.16.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.3",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.4.3",
    "jest-html-reporters": "^3.1.4",
    "jest-junit": "^16.0.0",
    "jest-transform-stub": "^2.0.0",
    "msw": "^1.3.2",
    "postcss": "^8.4.21",
    "ts-jest": "^29.4.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  }
}
